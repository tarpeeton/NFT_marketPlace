<style>
    .container {
      width: 100%;
      padding: 2px;
    }
    tr:nth-child(even) {
      background-color: #312f2fef;
    }
    tr:nth-child(odd) {
      background-color: #454547d3;
    }
    th {
      background-color: #342F44;
      color: white;
    }
    
    .noBorder {
        border:none !important;
    }
    .btn {
      margin: 0 25% 0  25%;
    }
